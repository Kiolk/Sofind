<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="AppTheme">
        <attr name="primaryTextColor" format="color"/>
        <attr name="primaryTextFont" format="reference"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="secondBackgroundColor" format="color"/>
        <attr name="menuTextColor" format="integer"/>
        <attr name="iconLampColor" format="color"/>
        <attr name="colorAccent" format="color"/>
        <attr name="bigTitle" format="dimension"/>
        <attr name="smallTitle" format="dimension"/>
        <attr name="generalBackground" format="integer"/>
        <attr name="itemBackgroundColor" format="color"/>
        <attr name="toolBarHeight" format="dimension"/>
    </declare-styleable>

    <style name="MyTheme" parent="AppTheme">
        <item name="primaryTextFont">@font/forum</item>
    </style>

    <style name="Light" parent="MyTheme">
        <item name="menuTextColor">@color/DARK_GRAY_TEXT_COLOR</item>
        <item name="backgroundColor">@color/LIGHT_BACKGROUND_COLOR</item>
        <item name="secondBackgroundColor">@color/LIGHT_SECOND_BACKGROUND_COLOR</item>
        <item name="primaryTextColor">@color/DARK_GRAY_TEXT_COLOR</item>
    </style>

    <style name="Dark" parent="MyTheme">
        <item name="menuTextColor">@color/LIGHT_GRAY_TEXT_COLOR</item>
        <item name="backgroundColor">@color/DARK_BACKGROUND_COLOR</item>
        <item name="secondBackgroundColor">@color/DARK_SECOND_BACKGROUND_COLOR</item>
        <item name="primaryTextColor">@color/LIGHT_GRAY_TEXT_COLOR</item>
    </style>

    <style name="RedDark" parent="Dark">
        <item name="colorAccent">@color/RED</item>
    </style>

    <style name="RedLight" parent="Light">
        <item name="colorAccent">@color/RED</item>
    </style>

    <style name="BlueDark" parent="Dark">
        <item name="colorAccent">@color/BLUE</item>
    </style>

    <style name="BlueLight" parent="Light">
        <item name="colorAccent">@color/BLUE</item>
    </style>

    <style name="GreenDark" parent="Dark">
        <item name="colorAccent">@color/GREEN</item>
    </style>

    <style name="GreenLight" parent="Light">
        <item name="colorAccent">@color/GREEN</item>
    </style>

    <style name="EditBlockStyle">
        <item name="android:theme">?attr/primaryTextColor</item>
        <item name="android:paddingLeft">@dimen/BIG_PADDING</item>
        <item name="android:layout_marginLeft">@dimen/BIG_PADDING</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/primaryTextColor</item>
        <item name="android:layout_marginRight">@dimen/BIG_PADDING</item>
        <item name="android:paddingRight">@dimen/BIG_PADDING</item>
    </style>

    <style name="EditProfileTitleStyle">
        <item name="android:layout_weight">4</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textSize">@dimen/GENERAL_TEXT_COLOR</item>
    </style>

    <style name="EditProfileInputStyle">
        <item name="android:layout_weight">7</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="FloatButtonDialogStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/BIG_PADDING</item>
    </style>

</resources>
